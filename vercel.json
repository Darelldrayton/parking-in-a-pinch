{
  "buildCommand": "cd frontend && npm install && npm run build && cp -r dist/* ../",
  "outputDirectory": ".",
  "installCommand": "echo 'Custom build process'",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://165.227.111.160/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
